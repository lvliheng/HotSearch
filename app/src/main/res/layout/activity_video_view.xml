<?xml version="1.0" encoding="utf-8"?>
<com.lvvi.hotsearch.ui.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_my_rl"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:transitionName="@string/video_transition_name"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</com.lvvi.hotsearch.ui.view.MyRelativeLayout>